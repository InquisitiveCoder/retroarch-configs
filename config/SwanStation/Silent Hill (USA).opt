# 24-bit color smooths out the fog.
swanstation_GPU_TrueColor = "true"

# The game has 4-5 frames of input lag during gameplay, but any amount
# of runahead cuts off inventory menu sounds. If you don't care about
# the inventory sounds, raise this to 4.
swanstation_Main_RunaheadFrameCount = "0"

# Options are always stand-alone files, so game and content directory
# overrides should include the core options file.
#include "SwanStation.opt"
